<Window x:Class="_11_MyFirstWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_11_MyFirstWpfApp"
        mc:Ignorable="d"
        Title="My WPF App"
        Height="450"
        Background="Blue"
        Width="600">
    <Grid>

        <Button Background="Red"
                Width="100"
                Height="50"
                Content="Show"
                x:Name="btnShow"
                Click="btnShow_Click" />


        <TextBox Width="200"
                 Height="40"
                 VerticalContentAlignment="Center"
                 x:Name="tBoxInput"
                 Margin="0,0, 0, 100" />

        <ComboBox Width="120"
                  Height="50"
                  Margin="0,130,0,0">
            <ComboBoxItem Content="Elma" />
            <ComboBoxItem Content="Armut" />
            <ComboBoxItem Content="Kivi" />
        </ComboBox>

    </Grid>
</Window>
